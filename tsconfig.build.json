{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "noEmit": false,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "paths": {
      "#nlpr/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": [
    "node_modules",
    "*.d.ts",
    "src/bin/SequelizeAutoModelGenerate.ts",
    "src/bin/sequelize-auto-test.ts"
  ]
}
